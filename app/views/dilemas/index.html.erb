<h1>Dilemas</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Edit</th>
    
  </tr>
 
  <% @dilemas.each do |dilema| %>
    <tr>
      <td><%= link_to dilema.decision, dilema_path(dilema) %></td>
      <td><%= link_to 'Delete', dilema_path(dilema),
        method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to "New Dilema", new_dilema_path, class: 'btn' %>
  <%= link_to 'Edit profile', edit_user_registration_path, class: "btn" %> 
  <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn"  %>